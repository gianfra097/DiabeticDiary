Screen:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/BackgroundApp.png'

    Image: 
        source: 'images/prova1.png'
        size_hint_y: 0.3 
        allow_stretch: True
        pos_hint: {"x": 0, "y": 0.68}

    FloatLayout:
        size_hint: 1,1  #FloatLayout 100% altezza e larghezza
        Button:
            background_color: kivy.utils.get_color_from_hex("#345065")
            background_down: ""
            background_normal: ""
            text: 'Accedi'
            pos_hint: {"center_x":0.5 , "center_y":0.4}   #center_x:0.5, center_y:0.5 per centrare
            size_hint: 0.7,None
            height: dp(90)
            on_press: #Se il bottone e' cliccato, chiama la funzione request che avviera' l'autenticazione
                app.request()
